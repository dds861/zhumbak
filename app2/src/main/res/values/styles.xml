<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@drawable/app_background</item>
        <item name="colorControlNormal">@color/emaWhite</item>
        <item name="emaActionBarStyle">@style/ActionBarStyle</item>
        <item name="emaAppBarLayoutStyle">@style/AppBarLayoutStyle</item>
    </style>

    <style name="ActionBarStyle">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="AppBarLayoutStyle">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="DialogTitle" parent="Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/letter_big_huge</item>
        <item name="android:layout_marginTop">@dimen/space_big</item>
    </style>

    <style name="DialogMessage" parent="Text">
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textSize">@dimen/letter_big</item>
        <item name="android:layout_marginTop">@dimen/space_big</item>
    </style>


    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/shape_button_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/button_min_height_lda</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">@dimen/icon_size_huge</item>
    </style>

    <style name="ButtonRed" parent="Button">
        <item name="android:background">@drawable/shape_button_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonGreen" parent="Button">
        <item name="android:background">@drawable/shape_button_green</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ButtonWhite" parent="Button">
        <item name="android:background">@drawable/shape_button_white</item>
        <item name="android:textColor">@color/accent</item>
    </style>







    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>

    </style>

    <style name="MyCardViewStyleSearch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">4dp</item>
        <item name="contentPaddingTop">4dp</item>
        <item name="contentPaddingLeft">4dp</item>
        <item name="contentPaddingRight">4dp</item>

    </style>






    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




</resources>
